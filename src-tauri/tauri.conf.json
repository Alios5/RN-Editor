{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "RhythmNator Editor",
  "version": "0.3.0",
  "identifier": "com.rhythmnator.editor",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Rhythm Nator Editor",
        "width": 1600,
        "height": 900,
        "minWidth": 1200,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": false,
        "visible": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      },
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "ext": ["rne"],
        "name": "RhythmNator Project",
        "description": "RhythmNator Editor Project File",
        "role": "Editor",
        "mimeType": "application/x-rhythmnator-project",
        "exportedType": {
          "identifier": "com.rhythmnator.editor.rne",
          "conformsTo": ["public.data"]
        }
      }
    ]
  }
}
